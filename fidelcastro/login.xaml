<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fidelcastro.login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login" FontSize="15" HorizontalOptions="CenterAndExpand" />
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>

            <Entry Placeholder="usuario" x:Name="txt_usuario" Margin="20,0,0,0"/>
            <Entry Placeholder="contraseña" x:Name="txt_contrasena" Margin="20,0,0,0"/>
            <Button Text="ingresar" x:Name="btn_ingresar" Margin="20,0,0,0" Clicked="btn_ingresar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>